@model IEnumerable<DicaVerde.Models.RecursoEducativo>
@{
    ViewData["Title"] = "Jogos Educativos";
}

<h2>Jogos Educativos</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <p class="card-text">@item.Descricao?.Substring(0, Math.Min(item.Descricao.Length, 100))...</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Acessar</a>
                </div>
            </div>
        </div>
    }
</div>
