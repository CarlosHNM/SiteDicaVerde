@model DicaVerde.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4">Bem-vindo ao Sistema Sustentável!</h2>

    <div class="row">

        <!-- Usuários -->
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-4 shadow">
                <div class="card-header">Usuários</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalUsuarios</h3>
                    <p class="card-text">Cadastrados no sistema.</p>
                    <a href="@Url.Action("Index", "User")" class="btn btn-light">Ver Usuários</a>
                </div>
            </div>
        </div>

        <!-- Projetos -->
        <div class="col-md-3">
            <div class="card text-white bg-success mb-4 shadow">
                <div class="card-header">Projetos</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalProjetos</h3>
                    <p class="card-text">Projetos ativos.</p>
                    <a href="@Url.Action("Index", "Projeto")" class="btn btn-light">Ver Projetos</a>
                </div>
            </div>
        </div>

        <!-- Notícias -->
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-4 shadow">
                <div class="card-header">Notícias</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalNoticias</h3>
                    <p class="card-text">Publicadas no portal.</p>
                    <a href="@Url.Action("Index", "Noticia")" class="btn btn-light">Ver Notícias</a>
                </div>
            </div>
        </div>

        <!-- Relatórios -->
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-4 shadow">
                <div class="card-header">Relatórios</div>
                <div class="card-body">
                    <h3 class="card-title">@Model.TotalRelatorios</h3>
                    <p class="card-text">Gerados no sistema.</p>
                    <a href="@Url.Action("Index", "Relatorio")" class="btn btn-light">Ver Relatórios</a>
                </div>
            </div>
        </div>

    </div>
</div>
