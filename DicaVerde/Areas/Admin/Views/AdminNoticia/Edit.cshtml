@model DicaVerde.Models.Noticia

@{
    ViewData["Title"] = "Editar Notícia";
}

<h1>Editar Notícia</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <!-- Mesmos campos do Create -->

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Conteudo"></label>
        <textarea asp-for="Conteudo" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Conteudo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataPublicacao"></label>
        <input asp-for="DataPublicacao" class="form-control" type="date" />
        <span asp-validation-for="DataPublicacao" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
