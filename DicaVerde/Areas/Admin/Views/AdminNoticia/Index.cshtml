@model IEnumerable<DicaVerde.Models.Noticia>

@{
    ViewData["Title"] = "Notícias";
}

<h1 class="mb-3">Notícias</h1>

<a asp-action="Create" class="btn btn-success mb-3">Nova Notícia</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Data de Publicação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.DataPublicacao.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
