@model DicaVerde.Models.Relatorio
@{
    ViewData["Title"] = "Detalhes do Relatório";
}

<h1>Detalhes do Relatório</h1>

<div>
    <h4>@Model.Titulo</h4>
    <p><strong>Projeto:</strong> @Model.Projeto?.Nome</p>
    <p><strong>Descrição:</strong> @Model.Descricao</p>
    <p><strong>Data de Publicação:</strong> @Model.DataPublicacao.ToShortDateString()</p>
    @if (!string.IsNullOrEmpty(Model.CaminhoArquivo))
    {
        <p><strong>Arquivo:</strong> <a href="@Model.CaminhoArquivo" target="_blank">Ver PDF</a></p>
    }
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
