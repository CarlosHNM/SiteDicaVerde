@model IEnumerable<DicaVerde.Models.Relatorio>
@{
    ViewData["Title"] = "Relatórios";
}

<h1>Relatórios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Relatório</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Projeto</th>
            <th>Data Publicação</th>
            <th>Arquivo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Projeto?.Nome</td>
                <td>@item.DataPublicacao.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.CaminhoArquivo))
                    {
                        <a href="@item.CaminhoArquivo" target="_blank">Ver PDF</a>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
