@model IEnumerable<DicaVerde.ViewModels.ProjetoViewmodel>

@{
    ViewData["Title"] = "Lista de Projetos";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Projeto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data Início</th>
            <th>Data Fim</th>
            <th>Ativo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.DataInicio.ToShortDateString()</td>
                <td>@(item.DataFim.HasValue ? item.DataFim.Value.ToShortDateString() : "-")</td>
                <td>@(item.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
